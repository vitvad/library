- var headline = headline || "Epam library";

div(class="navbar navbar-inverse navbar-fixed-top")
	div.navbar-inner
		div.container-fluid
			a(class="btn btn-navbar", data-toggle="collapse",data-target=".nav-collapse")
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.brand(href="/") #{headline}
			div(class="nav-collapse collapse")
				//-login block
				- if(typeof(user) != "undefined")
					p(class="navbar-text pull-right")="Logged in as "
						a.navbar-link(href="/user")
							em(class="icon-user icon-white")
							strong #{user.login}
						&nbsp;
						em(class="icon-remove icon-white")
						a.navbar-link(href="/logout") logout
				- else
					p(class="navbar-text pull-right")
						a.navbar-link(href="/login")
				//-main menu
				ul.nav
					- var links = [{"href":"/", "text": "Main"},{"href":"/books", "text": "My books"},{"href":"/whishlist", "text": "Whishlist"}]
					each link in links
						li
							a(href="#{link.href}")=link.text
